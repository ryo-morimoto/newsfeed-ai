{
  "name": "newsfeed-ai",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "dev:bot": "bun --watch apps/bot/src/main.ts",
    "dev:web": "cd apps/web && bun run dev",
    "start:bot": "bun run apps/bot/src/main.ts",
    "start:web": "cd apps/web && bun run start",
    "build:web": "cd apps/web && bun run build",
    "test": "bun test apps/bot/src",
    "test:unit": "bun test apps/bot/src/*.test.ts",
    "test:integration": "bun test apps/bot/src/__tests__/",
    "test:watch": "bun test --watch",
    "lint": "oxlint && eslint .",
    "lint:fix": "oxlint --fix && eslint . --fix",
    "lint:ox": "oxlint",
    "lint:eslint": "eslint .",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "bun x tsc --noEmit -p packages/core && bun x tsc --noEmit -p apps/bot",
    "ci": "bun run typecheck && bun run lint && bun run test",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.8",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "lefthook": "^2.1.0",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
