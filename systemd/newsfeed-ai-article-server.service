[Unit]
Description=Newsfeed AI Article Summary Server
After=network.target

[Service]
Type=simple
User=exedev
WorkingDirectory=/home/exedev/newsfeed-ai
ExecStart=/home/exedev/.bun/bin/bun run src/article-server.ts
Restart=always
RestartSec=10
EnvironmentFile=/home/exedev/newsfeed-ai/.env

[Install]
WantedBy=multi-user.target
